"curl -L https://raw.githubusercontent.com/timothy1205/dotfiles/master/.vim/vimrc-remote > ~/.vimrc

set nocompatible
filetype plugin indent on
set number	
set linebreak	
set showbreak=+++
set textwidth=100
set showmatch	
set visualbell	
set relativenumber
 
set hlsearch
set smartcase	
set ignorecase	
set incsearch	 
set autoindent	
set expandtab	
set shiftwidth=2
set smartindent	
set smarttab	
set softtabstop=0 
set cmdheight=2

set updatetime=300

set ruler	
 
set undolevels=1000	
set backspace=indent,eol,start

set scrolloff=5

set encoding=utf-8

syntax on
set background=dark

"control + h/j/k/l will move around the windows
nnoremap <C-J> <C-W>j
nnoremap <C-K> <C-W>k
nnoremap <C-L> <C-W>l
nnoremap <C-H> <C-W>h

"send to blackhole register by default
nnoremap d "_d
nnoremap x "_x

nnoremap : ;
nnoremap ; :

" Swap ` and ' for marks
nnoremap ' `
nnoremap ` '
